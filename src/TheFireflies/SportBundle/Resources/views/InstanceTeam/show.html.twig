{% extends '::base.html.twig' %}

{% block body -%}
    <h1>InstanceTeam</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Begindate</th>
                <td>{{ entity.beginDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Enddate</th>
                <td>{{ entity.endDate|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('instanceteam') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('instanceteam_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li><a href="{{ path('playerdetail_new', { 'instanceTeamId': entity.id })   }}">Ajoutez-vous à l'équipe en créant une fiche joueur</a></li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
