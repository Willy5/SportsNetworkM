{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Sport</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Nbplayersmin</th>
                <td>{{ entity.nbPlayersMin }}</td>
            </tr>
            <tr>
                <th>Nbplayersmax</th>
                <td>{{ entity.nbPlayersMax }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('sport') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('sport_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
